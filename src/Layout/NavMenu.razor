<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@BrandText</a>
        <button title="@DisplayTexts.NavigationToggleTitle" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @DisplayTexts.NavigationHome
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="card-deck">
                <span class="bi bi-card-image-nav-menu" aria-hidden="true"></span> @DisplayTexts.NavigationTarotCards
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="datenbank">
                <span class="bi bi-database-fill-nav-menu" aria-hidden="true"></span> @DisplayTexts.NavigationDatabase
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> @DisplayTexts.NavigationSettings
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="anleitung">
                <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> @DisplayTexts.NavigationInstructions
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    [Parameter]
    public string? CurrentPageTitle { get; set; }

    private string BrandText => string.IsNullOrWhiteSpace(CurrentPageTitle)
        ? DisplayTexts.NavigationBrand
        : $"{DisplayTexts.NavigationBrand}-{CurrentPageTitle}";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
